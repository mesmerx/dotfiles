# finds out, if available)
bar {
    id top
    tray_output primary 
    position top
    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}
 bar {
    id bot
    position bottom
  status_command i3status
